<h1 class="text-center">Signup</h1>

<div class="col-md-6 col-md-offset-3">
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4><em>Something went wrong!</em></h4>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div id="registration-form"></div>
  <% end %>
</div>

<script>
  var node = document.getElementById("registration-form");
  var app = Elm.RegistraionForm.embed(node);
</script>
